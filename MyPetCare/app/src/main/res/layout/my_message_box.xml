<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/chatting_leftLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/chatting_yourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            tools:text="name" />

        <TextView
            android:id="@+id/chatting_yourMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="message"
            android:textColor="@android:color/black"
            android:background="@drawable/border_text_yellow"
            android:backgroundTint="@color/yellow"/>


        <TextView
            android:id="@+id/chatting_yourTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="time"
            app:layout_constraintStart_toEndOf="@+id/chatting_leftLayout"
            app:layout_constraintBottom_toBottomOf="@+id/chatting_leftLayout" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>